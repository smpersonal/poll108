  <body>
    <div class="container" >
        <header>
            <h1>Poll away</h1>
            <div class="headersubtext">
              Your chance to opine!
            </div>
    
            <div class="pollssection">
              <div class="headerlinks rdr-shadow-2dp " >
                <a href="/">Home</a>
              </div>
              <div class="headerlinks rdr-shadow-2dp col-md-6 col-xs-12 col-lg-6 col-sm-12">
                <a class="headerlinks" href="/poll/new">Add a new poll</a>
              </div>
            </div>
    
          </header>
    
  
    <div class="questionBox rdr-shadow-2dp " id="bkcolorchange" >     
         <div class="pollQuestion"><%=poll.Question%> </div>
      
      <form action="/poll/<%=poll.id%>?_method=PUT" method="POST">
      <% let max= poll.Answeroptions.length; %>
         <div class="answersTable">
            <%
            let tot=0; resfrac=[];
            for (let i=0;i< poll.Answeroptions.length;i++) {tot+=poll.Results[i];}
            for (let i=0;i< poll.Answeroptions.length;i++) 
            {resfrac[i]=Math.round(poll.Results[i]*10/tot);}
            %>
          
            <% for(let i=0;i<max;i++){%>
<!-- //// -->
<table>
    <tbody>
      <tr>
        <td class="pollAnswers answerCell"><%=poll.Answeroptions[i]%></td>
        <td class="valueCell"><%=poll.Results[i]%>  
        <%  for (let j=0;j<resfrac[i];j++)
        {%> 
          <span class="tinyBox"> </span>
        <% } %> 
        </td>
        <td>    <input type="radio"  name="AllResults"  class="Result<%=i%> radioButtonCell" id="Result<%=i%>" value="<%=poll.Answeroptions[i]%>" /></td>    
      </tr>
    </tbody>
  </table>
  


<!-- ///// -->
    <% } %>
<div class="submitLine">      <input class="form-container"   type="submit"  /></div> 
      </form>
    </div>
<!--  -->
  </div>


